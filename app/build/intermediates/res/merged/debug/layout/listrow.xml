<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/meetlist_height"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingTop="15dp"
    android:paddingBottom="5dp"
    android:background="@color/background_white"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meetplace"
        android:layout_toLeftOf="@+id/navigatebutton"
        android:layout_alignParentLeft="true"
        style="@style/NormalText"
        android:text="@string/sample_address" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@+id/meetplace"
        android:paddingTop="10dp"
        android:id="@+id/meettime"
        style="@style/NormalText"
        android:layout_height="wrap_content"
        android:text="@string/sample_time"
        android:layout_toLeftOf="@+id/navigatebutton"
        android:layout_alignParentLeft="true"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/meetlat"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/meetlang"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/navigatebutton"
        android:scaleType="centerInside"
        android:background="@color/background_white"
        android:src="@drawable/location"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    ...
</RelativeLayout>