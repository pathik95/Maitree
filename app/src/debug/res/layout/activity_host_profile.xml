<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hostBackground"
    android:orientation="vertical"
    tools:context="example.com.maitreev2.HostProfile">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="124dp"

        android:layout_gravity="left"
        android:background="@color/background_white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/hostprofileicon"
            android:layout_width="@dimen/hosticonparam"
            android:layout_height="@dimen/hosticonparam"
            android:src="@drawable/userprofile"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/hostBackground">

        <TextView
            android:id="@+id/txthostname"
            style="@style/TitleText"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_large"
            android:text="@string/hostname"
            android:textAlignment="center"

            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/hostname"
            android:layout_alignStart="@+id/hostname" />
        <TextView
            android:id="@+id/hostname"
            style="@style/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_medium"
            android:text="Mr. &amp; Mrs Chirag Pandya"
            android:layout_below="@+id/txthostname"
            android:layout_alignLeft="@+id/txthostdesc"
            android:layout_alignStart="@+id/txthostdesc" />
        <TextView
            android:id="@+id/txthostmob"
            style="@style/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hostname"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/contact" />

        <TextView
            android:id="@+id/hostcontact"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txthostmob"
            android:layout_alignStart="@+id/txthostmob"
            android:layout_below="@+id/txthostmob"
            android:paddingTop="@dimen/margin_medium"
            android:paddingRight="@dimen/margin_medium"
            android:text="@string/sample_contact" />


        <TextView
            android:id="@+id/txthostadr"
            style="@style/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txthostmob"
            android:layout_alignLeft="@+id/txthostmob"
            android:layout_alignRight="@+id/txthostmob"
            android:layout_alignStart="@+id/txthostmob"
            android:layout_below="@+id/hostcontact"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/address"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/hostaddress"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txthostadr"
            android:paddingTop="@dimen/margin_medium"
            android:paddingRight="@dimen/margin_medium"
            android:text="@string/sample_address"
            android:layout_alignLeft="@+id/txthostadr"
            android:layout_alignStart="@+id/txthostadr" />

        <TextView
            android:id="@+id/txthostdesc"
            style="@style/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txthostadr"
            android:layout_alignRight="@+id/txthostadr"
            android:layout_below="@+id/hostaddress"
            android:layout_marginTop="30dp"
            android:text="@string/aboutthem" />

        <TextView
            android:id="@+id/hostdesc"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txthostdesc"
            android:paddingTop="@dimen/margin_medium"
            android:paddingRight="@dimen/margin_medium"
            android:text="Mr. Virendra Rathod is the founder of maitree at ahmedabad and started in 1993. He was born in bhavnagar and has studied organic chemistry. He was working with Excel Genetics limited and is now a consultant to Transpek Industries Limited."
            android:layout_alignLeft="@+id/txthostdesc"
            android:layout_alignStart="@+id/txthostdesc" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ScrollView>

</LinearLayout>
